<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">


<xacro:macro name="finger" params="name parent *origin">

  <joint name="${name}_joint" type="revolute">
    <parent link="${parent}"/>
    <child link="${name}_link"/>
    <axis xyz="0 -1 0"/>
    <xacro:insert_block name="origin"/>
    <limit effort="50" velocity="10.0" lower="0" upper="3.14" />
  </joint>


  <link name="${name}_link">
      <inertial>
          <origin xyz="0.0 0.0 0.0"/>
          <mass value="0.05" />
          <inertia  ixx="0.001" ixy="0.0"  ixz="0.0"  iyy="0.001"  iyz="0.0"  izz="0.001" />
    </inertial>
     <visual>
        <origin xyz="0 0.05 0.03" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://gripper_description/meshes/finger.stl" scale="0.001 0.001 0.001"/>
        </geometry>
     </visual>
     <collision>
        <origin  xyz="0 0.05 0.03" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://gripper_description/meshes/finger.stl" scale="0.001 0.001 0.001"/>
        </geometry>
     </collision>
  </link>

</xacro:macro>
</robot>
